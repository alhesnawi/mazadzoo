# Mazadzoo Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================
# SERVER & ENVIRONMENT
# ============================================================
NODE_ENV=development
PORT=5000

# ============================================================
# DATABASE - MongoDB
# ============================================================
# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/mazadzoo?retryWrites=true&w=majority

# Alternative: Local MongoDB (for development)
# MONGODB_URI=mongodb://localhost:27017/mazadzoo

# ============================================================
# JWT AUTHENTICATION
# ============================================================
# Secret key for JWT token signing (change this in production)
# Recommended: Use a strong random string at least 32 characters
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT expiration time (e.g., 7d, 24h, 604800)
JWT_EXPIRES_IN=7d

# ============================================================
# CORS & DOMAIN
# ============================================================
# Primary domain for the application
DOMAIN=localhost

# Allowed origins for CORS (comma-separated or single)
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://127.0.0.1:5173

# Socket.IO CORS origin
SOCKET_CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175

# ============================================================
# RATE LIMITING
# ============================================================
# Rate limit window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum number of requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================
# FILE UPLOADS
# ============================================================
# Maximum file size in bytes (default: 5242880 = 5MB)
MAX_FILE_SIZE=5242880

# Upload directory path
UPLOAD_PATH=./uploads

# ============================================================
# EMAIL CONFIGURATION (SMTP)
# ============================================================
# Email provider SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Sender email address
EMAIL_FROM=noreply@mazadzoo.online

# ============================================================
# PAYMENT GATEWAY (Stripe)
# ============================================================
# Stripe API keys
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx

# ============================================================
# REDIS (Optional - for caching)
# ============================================================
# Redis URL (optional, used for caching)
REDIS_URL=redis://localhost:6379

# ============================================================
# FIREBASE (For mobile and optional backend features)
# ============================================================
# Firebase Admin SDK service account JSON (base64 encoded or path to JSON file)
FIREBASE_ADMIN_SDK=path/to/firebase-service-account.json

# ============================================================
# LOGGING
# ============================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# ============================================================
# DEVELOPMENT FLAGS
# ============================================================
# Enable debug mode (verbose logging)
DEBUG=false

# Use mock data (for development without backend)
USE_MOCK_DATA=false

# ============================================================
# NOTES
# ============================================================
# 1. Never commit the actual .env file to version control
# 2. Add .env to .gitignore
# 3. Share .env.example (this file) with team members
# 4. Each developer should create their own .env locally
# 5. Use strong, unique secrets for production deployments
# 6. Rotate secrets periodically in production
