# Production Environment Variables Template
# Copy this file to .env in production and fill in the actual values

# Environment
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/rare_animals_auction?retryWrites=true&w=majority

# Security
JWT_SECRET=your_super_secure_random_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRE=7d

# Domain Configuration
DOMAIN=your-domain.com
CORS_ORIGIN=https://your-frontend-domain.com
SOCKET_CORS_ORIGIN=https://your-frontend-domain.com

# Email Configuration (Required for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASS=your-app-specific-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Payment Gateway (Required for payments)
PAYMENT_GATEWAY_URL=https://api.moamalat.ly
PAYMENT_GATEWAY_KEY=your_production_payment_key
PAYMENT_GATEWAY_SECRET=your_production_payment_secret

# Firebase (Required for mobile app)
FIREBASE_ADMIN_SDK=path/to/your/firebase-admin-sdk.json

# Auction Configuration
AUCTION_DURATION_MINUTES=20
AUCTION_EXTENSION_MINUTES=1
LISTING_FEE_LYD=10
BIDDING_FEE_LYD=40

# Logging
LOG_LEVEL=info

# SMS Service (Optional - for phone verification)
# SMS_PROVIDER=twilio
# SMS_ACCOUNT_SID=your_twilio_account_sid
# SMS_AUTH_TOKEN=your_twilio_auth_token
# SMS_FROM_NUMBER=your_twilio_phone_number