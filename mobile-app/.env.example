# Mobile App Environment Configuration
# Copy this file to .env and update with your values

# API Configuration
# For Android Emulator: http://10.0.2.2:5000/api
# For iOS Simulator: http://localhost:5000/api
# For Physical Device: http://YOUR_COMPUTER_IP:5000/api
# For Codespaces: https://animated-barnacle-r469r755gw7xc5rjr-5000.app.github.dev/api
EXPO_PUBLIC_API_URL=http://10.0.2.2:5000/api

# Socket.IO URL (same as API but without /api)
EXPO_PUBLIC_SOCKET_URL=http://10.0.2.2:5000

# App Configuration
EXPO_PUBLIC_APP_NAME=مزاد الحيوانات النادرة
EXPO_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_REAL_TIME_BIDDING=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true

# Development
EXPO_PUBLIC_DEBUG_MODE=true
